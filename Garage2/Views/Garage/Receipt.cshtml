@model Garage2.Models.Vehicle

@{ 
    double pricePerHour = 100;
    var checkOutTimeStamp = DateTime.Now;
    var parkingPeriod = checkOutTimeStamp.Subtract(Model.TimeStamp); // TimeStamp => checkInTimeStamp
    var totalPeriodInMin = Math.Round(parkingPeriod.TotalMinutes);
    var totalPrice = Math.Ceiling((pricePerHour / 60) * totalPeriodInMin);
}

<div>
    <h2>Receipt</h2>
    <h4>Garage price: @pricePerHour kr / hour</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RegNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Model)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Model)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wheels)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wheels)
        </dd>
        
   @*Additional info*@
        <dt>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>

        <dt>
            @Html.DisplayName("Check-out time")
        </dt>

        <dd>
            @checkOutTimeStamp
        </dd>

        <dt>
            @Html.DisplayName("Total duration")
        </dt>

        <dd>
            @totalPeriodInMin min
        </dd>

        <dt>
            @Html.DisplayName("Total Price")
        </dt>

        <dd>
            @totalPrice kr
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to Vehicle List", "Index")
</p>
